{{!
    @template report_lp/summary_report

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}
{{#nofilteredcoursegroups}}
    <div class="container-fluid p-0">
        <div class="text-xs-center text-center mt-3" data-region="empty-message">
            <p class="text-muted mt-3">{{# str }} noselectedcoursegroups, report_lp {{/ str }}</p>
            <img class="empty-placeholder-image-lg mt-1"
                src="{{rowsimageurl}}"
                alt="{{# str }} noselectedcoursegroups, report_lp {{/ str }}"
                role="presentation">
            <p class="text-muted mt-3">{{# str }} noselectedcoursegroups:description, report_lp {{/ str }}</p>
        </div>
    </div>
{{/nofilteredcoursegroups}}
{{^nofilteredcoursegroups}}
    <div class="alert alert-secondary" role="alert" data-excluded="learners">
        <a href="#" class="button" role="button"><i class="fa fa-trash" aria-hidden="true"></i></a>
        <span class="excluded-learners">Clear learner exclusions Abhi Chandra, Alan Parker</span>
    </div>
    <div class="overflow-visible">
        <table id="report-lp-summary-report-{{uniqid}}" class="report-lp-summary-report d-print-table" data-learners >
            <thead class="">
            {{#primaryheader}}
                <tr class="d-print-table-row">
                    {{#columns}}
                        <th colspan="{{colspan}}" class="cell cell-primary-header d-print-table-cell" scope="col">
                            {{>report_lp/summary_label}}
                        </th>
                    {{/columns}}
                </tr>
            {{/primaryheader}}
            {{#secondaryheader}}
                <tr class="d-print-table-row">
                    {{#columns}}
                        <td colspan="{{colspan}}" class="cell cell-secondary-header d-print-table-cell" scope="col">
                            {{>report_lp/summary_label}}
                        </td>
                    {{/columns}}
                </tr>
            {{/secondaryheader}}
            </thead>
            <tbody>
            {{#rows}}
                {{#learner}}
                <tr class="d-print-table-row" data-learner-id="{{id}}" data-row>
                    <td class="cell cell-lg d-print-table-cell" scope="col">
                        <img src="{{imageurl}}" alt="{{imagealt}}" class="userpicture defaultuserpic"/>
                        {{fullname}}
                        {{#status}}
                            <span class="badge badge-pill badge-danger" title="Withdrawn">W</span>
                        {{/status}}
                    </td>
                    <td class="cell d-print-table-cell" scope="col">
                        <a href="#" class="button" role="button" data-learner-id="{{id}}" data-filter="exclude-learner"><i class="fa fa-user-times" aria-hidden="true"></i></a>
                    </td>
                    <td class="cell d-print-table-cell" scope="col"><span class="">{{idnumber}}</span></td>
                    <td class="cell d-print-table-cell" scope="col">{{coursegroups}}</td>
                    {{#measures}}
                        <td class="cell d-print-table-cell" scope="col"><span class="">{{{value}}}</span></td>
                    {{/measures}}
                </tr>
                {{/learner}}
            {{/rows}}
            </tbody>
        </table>
    </div>
{{/nofilteredcoursegroups}}
{{#js}}
    require(
    [
    'report_lp/filter_exclude_learner'
    ],
    function(excludeLearnerFilter) {
        excludeLearnerFilter.init('#report-lp-summary-report-{{uniqid}}');
    });
{{/js}}
