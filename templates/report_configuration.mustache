<div class="row">
    <div class="col-3">
        {{#itemtypemenu}}
            <ul class="list-group">
                <li class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{groupingname}}</h5>
                            <a href="{{creategroupingurl}}" role="button"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                        </div>

                        <small class="text-muted">{{groupingdescription}}</small>
                </li>
                {{#measuresmenu}}
                    <li class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{measurename}}</h5>
                            <a href="{{createmeasureurl}}" role="button"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                        </div>

                        <small class="text-muted">{{measuredescription}}</small>
                    </li>
                {{/measuresmenu}}
            </ul>
        {{/itemtypemenu}}

    </div>
    <div class="col-9">
        <div class="list-group item-tree-configuration">
            <ul>
                {{#lineitems}}
                    <li class="list-group-item {{#isroot}}header{{/isroot}} depth-{{depth}}" data-item-id="{{id}}">
                        <div>
                            {{label}}
                            {{>report_lp/item_tree_configuration_actions}}
                        </div>
                    </li>
                {{/lineitems}}
            </ul>
        </div>
    </div>
</div>

