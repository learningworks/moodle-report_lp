{{!
    @template mod_dialogue/list_filter_selector

    This template renders filter dropdown.

    Example context (json):
    {

    }
}}
<div id="report-lp-group-filter-{{uniqid}}" class="dropdown m-b-1 d-print-none">
    <button id="groupingdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} aria:filterdropdown, report_lp {{/str}}">
        {{#pix}} i/filter {{/pix}}
        <span class="d-sm-inline-block" data-active-text>
            {{activetext}}
        </span>
    </button>
    <ul class="dropdown-menu" data-course-id="{{courseid}}" data-redirect-url="{{redirecturl}}" data-active-menu aria-labelledby="filterdropdown">
        <li>
            <h6 class="dropdown-header">{{#str}} filtergroups, report_lp {{/str}}</h6>
        </li>
        {{#groups}}
            <li>
                <a class="dropdown-item {{#isactive}}active{{/isactive}}" href="#" data-filter="filter" data-group-id="{{id}}" aria-label="" data-skip-active-class aria-controls="summary-view-{{uniqid}}">
                    {{name}}<div class="checked {{^isactive}}d-none{{/isactive}} float-right"><i class="fa fa-check" aria-hidden="true"></i></div>
                </a>
            </li>
        {{/groups}}

    </ul>
</div>
{{#js}}
    require(
    [
        'report_lp/group_filter'
    ],
    function(groupFilter) {
        groupFilter.init('#report-lp-group-filter-{{uniqid}}');
    });
{{/js}}
