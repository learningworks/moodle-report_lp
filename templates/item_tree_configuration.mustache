<div class="item-tree-configuration">
    <ul>
        {{#items}}
            {{#isgrouping}}
                <div>
                <li>
                    {{label}}
                    {{#haschildren}}
                        <ul>
                            {{#grouping}}
                                <li><div>{{label}}</div></li>
                            {{/grouping}}
                        </ul>
                    {{/haschildren}}
                </li>
                </div>
            {{/isgrouping}}
            {{^isgrouping}}
                <li><div>{{label}}</div></li>
            {{/isgrouping}}
        {{/items}}
    </ul>
</div>

