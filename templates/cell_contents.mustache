{{!
    @template report_lp/summary_label

    This template renders labels for cell headers.

    Example context (json):
    {
        "contents": [
            {
            "text": "Some text",
            "title": "Some title text",
            "url": "https://gumbygold.box/dev-learn/mod/assign/view.php?id=1",
            "icon": [
                "attributes": [
                    { "name": "src", "value": "http://moodle.com/wp-content/themes/moodle/images/logo-hat2.png" },
                    { "name": "class", "value": "iconsmall" }
                    ]
                ]
            }
        ]
    }
}}
{{^contents}}
    {{#icon}}
        {{>core/pix_icon}}
    {{/icon}}
    {{#link}}
        <a href="{{src}}" title="{{alt}}">{{{text}}}</a>
    {{/link}}
    {{^link}}
        <span title="{{title}}">{{{text}}}</span>
    {{/link}}
{{/contents}}
